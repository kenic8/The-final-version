<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_view"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#656ca7"
    app:contentPadding="5dp"
    app:cardElevation="5dp"

    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout"
    android:padding="17dp"
    >

    <TextView
        android:textSize="70dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/product_quantity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></TextView>
    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/product_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/product_quantity"
        android:layout_marginStart="17dp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:id="@+id/product_detail"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/product_title"
        app:layout_constraintLeft_toRightOf="@id/product_quantity"/>
    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_update"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="Update"
        app:layout_constraintTop_toBottomOf="@id/product_detail"
        app:layout_constraintRight_toRightOf="parent"></Button>-->

    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/product_options"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_deletesingle"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/product_detail"
        app:layout_constraintRight_toRightOf="parent"></ImageView>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/product_edit"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_edit"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/product_options"
        app:layout_constraintRight_toRightOf="parent"></ImageView>




</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>